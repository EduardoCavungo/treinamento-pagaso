<%= form_for contato, url: url, method: :post, html: { style: 'text-align: left' }, onsubmit: onsubmit do |f| %>
  <%= f.hidden_field :authenticity_token, value: form_authenticity_token %>

  <div class="form-group">
    <%= f.label :nome, "Nome *:" %>
    <%= f.text_field :nome, class: "form-control", placeholder: "Digite seu nome", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, "E-mail *:" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Digite seu e-mail", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :message, "Observação:" %>
    <%= f.text_area :message, class: "form-control", rows: 3, placeholder: "Digite sua observação" %>
  </div>

  <%= f.submit "Enviar", class: "btn btn-primary" %>
<% end %>
